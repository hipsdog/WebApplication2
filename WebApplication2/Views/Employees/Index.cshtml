@model IEnumerable<WebApplication2.Models.Employee>

@{
    ViewBag.Title = "Index";
}

<div class="jumbotron">
    <div class="container">
        <h2 style="text-align:center">Lista de emplados y sus clientes</h2>
        <p>
            @Html.ActionLink("Añadir empleado", "Create",null, new { @class = "btn btn-success" })
        </p>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Empleado)
                </th>
                <th>
                    @*@Html.DisplayNameFor(model => model.Cliente)*@
                    Cliente
                </th>
                <th></th>
            </tr>

            @foreach (var item in @Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Empleado)
                    </td>
                    <td>
                        @*@Html.DisplayFor(modelItem => item.Cliente)*@
                    </td>
                    <td>
                        @Html.ActionLink("Editar", "Edit", new { id = item.ID }, new { @class = "btn btn-default btn-xs" }) |
                        @Html.ActionLink("Borrar", "Delete", new { id = item.ID }, new { @class = "btn btn-danger btn-xs" })
                    </td>
                </tr>
            }
        </table>
    </div>
</div>